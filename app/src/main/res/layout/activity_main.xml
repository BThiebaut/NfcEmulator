<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:layout_margin="20dp"
    >

    <TextView
        android:id="@+id/txt_pres"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pres_text"
        />
    <Button
        android:id="@+id/btn_read_nfc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/read_nfc"
        app:layout_constraintTop_toBottomOf="@id/txt_pres"
        android:layout_marginTop="20dp"
        />
    <Button
        android:id="@+id/btn_emulate_nfc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/emulate_nfc"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_pres"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/txt_nfc_indic_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_read_nfc"
        android:layout_marginTop="10dp"
        android:text="@string/resultats"
        />
    <TextView
        android:id="@+id/txt_nfc_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt_nfc_indic_result"
        android:layout_marginTop="10dp"
        />
</android.support.constraint.ConstraintLayout>